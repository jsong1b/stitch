{
    "blocks": [
        {
            "from": "manual",
            "export": "/tmp/test1.txt",
            "lines": [
                "Hello, world!"
            ]
        },
        {
            "from": "manual",
            "export": "/tmp/test2.txt",
            "lines": [
                "Hello, world!",
                "This block will be appended to."
            ]
        },
        {
            "append": "/tmp/test2.txt",
